@model AuctionHouse.Models.ViewModels.ChangePasswordViewModel

@using (Ajax.BeginForm("ChangePassword", "Account", new AjaxOptions
{
    OnFailure = "onFailure",
    HttpMethod = "POST",
    OnSuccess = "onSuccessPasswordChange"
}))
{
    @Html.AntiForgeryToken()
    <div id="change-password" class="modal">
        <div class="modal-content">
            <div class="close-button-container">
                <span onclick="closePanel('change-password')" class="close" title="Close Modal">&times;</span>
            </div>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="container">

                @Html.LabelFor(model => model.ConfirmPassword)
                @Html.PasswordFor(model => model.ConfirmPassword)

                @Html.LabelFor(model => model.NewPassword)
                @Html.PasswordFor(model => model.NewPassword)

                <button type="submit">Change password</button>
            </div>
        </div>
    </div>
}
